{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "API RESTful Node.js + PostgreSQL + JWT (arquitectura por capas)",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test jest --selectProjects unit --runInBand --coverage && node scripts/print-coverage.js",
    "test:integration": "cross-env NODE_ENV=test jest --selectProjects integration --runInBand --coverage && node scripts/print-coverage.js",
    "test:functional": "cross-env NODE_ENV=test jest --selectProjects functional --runInBand",
    "test:perf": "artillery run tests/performance/orders.yml"
  },
  "keywords": [
    "node",
    "express",
    "postgresql",
    "sequelize",
    "jwt",
    "rest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.47.10",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.1.0",
    "artillery": "^2.0.17",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint --fix"
  },
  "overrides": {
    "eslint": "^8.57.0",
    "eslint-plugin-n": "^16.6.2"
  }
}
